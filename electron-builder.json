{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.betdutcher.app",
  "productName": "Betfair Dutching",
  "copyright": "Copyright 2025 BetDutcher",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist/public",
      "to": "dist/public"
    },
    {
      "from": "dist-server",
      "to": "dist-server"
    },
    {
      "from": "client-2048.crt",
      "to": "client-2048.crt"
    },
    {
      "from": "client-2048.key",
      "to": "client-2048.key"
    },
    {
      "from": "data",
      "to": "data"
    },
    {
      "from": "node_modules/better-sqlite3",
      "to": "node_modules/better-sqlite3"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Betfair Dutching"
  }
}
